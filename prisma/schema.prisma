generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

// This is the users table data for mapping
model User {
  id       Int    @id @default(autoincrement())
  username String @map("Name")
  EmailId  String @unique @map("Email")
  password String @map("passwordHash")
  ConfirmPassword String  @map("ConfirmPassword")
}

